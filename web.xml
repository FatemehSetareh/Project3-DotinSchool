<web-app>

    <listener>
        <listener-class>ActualCustomerListener</listener-class>
    </listener>
    <listener>
        <listener-class>CorporateCustomerListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>RegisterActualCustomer</servlet-name>
        <servlet-class>RegisterActualCustomer</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterCorporateCustomer</servlet-name>
        <servlet-class>RegisterCorporateCustomer</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>ActualCustomerInformation</servlet-name>
        <servlet-class>ActualCustomerInformation</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CorporateCustomerInformation</servlet-name>
        <servlet-class>CorporateCustomerInformation</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>RegisterActualCustomer</servlet-name>
        <url-pattern>/servlet/RegisterActualCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterCorporateCustomer</servlet-name>
        <url-pattern>/servlet/RegisterCorporateCustomer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualCustomerInformation</servlet-name>
        <url-pattern>/servlet/ActualCustomerInformation</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CorporateCustomerInformation</servlet-name>
        <url-pattern>/servlet/CorporateCustomerInformation</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>RegisterActualCustomerPage.html</welcome-file>
    </welcome-file-list>

</web-app>